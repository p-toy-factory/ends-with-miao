{
	"include": ["src"],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"allowUnusedLabels": false,
		"module": "ESNext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"outDir": "./dist",
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"types": ["@types/jest"]
	}
}
